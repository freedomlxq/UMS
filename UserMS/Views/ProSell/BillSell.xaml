                        <!--                        <userMs:MyAutoTextBox x:Name="SellOldID" Width="250" FontSize="18.667"/>-->
                        <TextBox  Text="" TextWrapping="Wrap" Margin="0" Width="250"  IsReadOnly="True" x:Name="MobileName" FontSize="18.667"/>

